{% extends 'admin/base.html.twig' %}

{% block title %}Ajout prestation
{% endblock %}
{% block h1 %}Ajouter une prestation
{% endblock %}

{% block content %}
	{{ form_start(form, {'attr': {'class': 'col-6 mx-auto'}})}}
	<div class="form-row">
		<div class="form-group col-6 col-lg-6">
			{{ form_widget(form.name, {'attr': {'class': 'form-control shadow-none','placeholder': 'Nom'}})}}
		</div>
		<div class="form-group col-6 col-lg-6">
			{{ form_widget(form.rate, {'attr': {'class': 'form-control shadow-none','placeholder': 'Tarif'}})}}
		</div>
	</div>
	<div class="form-row">
		<div class="form-group col-12 col-lg-12">
			{{ form_widget(form.category, {'attr': {'class': 'form-control col-12 col-lg-12'}})}}
		</div>
	</div>
	<div class="mx-auto d-flex justify-content-end">
		<button type="submit" class="btn bg264d7efoot text-white mb-3 shadow-none">Enregistrer</button>
	</div>
	{{ form_end(form) }}

{% endblock %}
