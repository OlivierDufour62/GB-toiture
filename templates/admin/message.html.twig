{% extends 'admin/base.html.twig' %}

{% block title %}Message
{% endblock %}
{% block h1 %}Message
{% endblock %}

{% block content %}

	<div class="table-responsive col-12 col-lg-12 col-xl-10 p-0 m-0 mt-5 mx-auto">

		<table class="table table-striped table-dark text-center">
			<thead>
				<tr>
					<th scope="col">ID</th>
					<th scope="col">Nom</th>
					<th scope="col">Prénom</th>
					<th scope="col">Email</th>
					<th scope="col">Téléphone</th>
					<th scope="col">Répondre</th>
					<th scope="col">Supprimer</th>
				</tr>
			</thead>
			<tbody>
				{% for contact in contact %}
					<tr>
						<th scope="row">{{contact.id}}</th>
						<td>{{contact.lastname}}</td>
						<td>{{contact.firstname}}</td>
						<td>{{contact.email}}</td>
						<td>{{contact.phonenumber}}</td>
						<td>
							<a href="/admin/replymessage/{{contact.id}}" id="{{contact.id}}" class="btn btn264d7e text-white reply sendprovider">Répondre</a>
						</td>
						<td>
							<div class="custom-control custom-switch">
								<input type="checkbox" class="custom-control-input messageswitches" contactwitches="{{contact.id}}" id="messageSwitches{{contact.id}}" {% if contact.isActive %} checked {% endif %}>
								<label class="custom-control-label" for="messageSwitches{{contact.id}}"></label>
							</div>
						</td>
					</tr>
				{% endfor %}
				{# <div class="d-none response col-10 dialog-absolute">
						<div id="dialog-perso" class="col-12" title="Répondre">
							<div>
								<p>
								coucou
								</p>
							</div>
							{{ form_start(form, {'attr': {'class': 'ajaxsendresponse'}})}}
							<div class="form-group">
								{{ form_widget(form.object, {'attr': {'class': 'form-control shadow-none' }})}}
							</div>
							<div class="form-group">
								{{ form_widget(form.message, {'attr': {'class': 'form-control resize shadow-none','placeholder': 'Votre message', 'rows':'10', 'cols':'29'}})}}
							</div>
							<div>
								<button type="submit" class="btn btn264d7e text-white my-2 my-sm-0 ml-3">Envoyer</button>
							</div>
							{{ form_end(form) }}
						</div>
					</div> #}
			</tbody>
		</table>
	</div>
{% endblock %}
