{% extends 'admin/base.html.twig' %}

{% block title %}Client
{% endblock %}
{% block h1 %}Client
{% endblock %}

{% block content %}

	<div class="table-responsive col-12 col-lg-12 col-xl-10 p-0 m-0 mt-5 mx-auto">
		<table class="table table-striped table-dark text-center">
			<thead>
				<tr>
					<th scope="col">ID</th>
					<th scope="col">Nom</th>
					<th scope="col">Prénom</th>
					<th scope="col">Email</th>
					<th scope="col">Téléphone</th>
					<th scope="col">Lire</th>
					<th scope="col">Répondre</th>
					<th scope="col">Supprimer</th>
				</tr>
			</thead>
			<tbody>
				{% for messages in message %}
					<tr>
						<th scope="row">{{messages.id}}</th>
						<td>{{messages.lastname}}</td>
						<td>{{messages.firstname}}</td>
						<td>{{messages.email}}</td>
						<td>{{messages.phonenumber}}</td>
						<td>
							<a href="/admin/readmessage/{{messages.id}}">
								<i class="ri-arrow-right-line text-white"></i>
							</a>
						</td>
						<td>
							<a id="{{messages.id}}" class="btn btn264d7e text-white reply sendprovider">Répondre</a>
						</td>
						<td>
							<div class="custom-control custom-switch">
								<input type="checkbox" class="custom-control-input messageswitches" messageswitches="{{messages.id}}" id="messageSwitches{{messages.id}}" {% if messages.isActive %} checked {% endif %}>
								<label class="custom-control-label" for="messageSwitches{{messages.id}}"></label>
							</div>
						</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
		<div class="d-none col-10 dialog-absolute">
			<div id="dialog-perso" class="col-12" title="Répondre">

			<textarea name="" id="" cols="29" rows="20" class="resize"></textarea>
				<button class="btn btn264d7e text-white my-2 my-sm-0 ml-3">Envoyer</button>
			</div>
		</div>
	</div>
	<div class="d-flex justify-content-end col-12 col-lg-12 col-xl-10 p-0 m-0 mx-auto">
		<a class="btn text-white btn264d7e" href="/admin/addcustomer">Ajouter un client</a>
	</div>
{% endblock %}
