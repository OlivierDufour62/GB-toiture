{% extends 'admin/base.html.twig' %}

{% block title %}Prestation
{% endblock %}
{% block h1 %}Prestation
{% endblock %}

{% block content %}

	<div class="table-responsive">
		<table class="table table-striped table-dark text-center">
			<thead>
				<tr>
					<th scope="col">ID</th>
					<th scope="col">Catégorie</th>
					<th scope="col">Type</th>
					<th scope="col">Tarif</th>
					<th scope="col">Éditer</th>
					<th scope="col">Supprimer</th>
				</tr>
			</thead>
			<tbody>
            {% for prestation in presta %}
				<tr>
					<th scope="row">{{prestation.id}}</th>
					<th scope="row">{{prestation.category.name}}</th>
					<td>{{prestation.name}}</td>
					<td>{{prestation.rate}}</td>
					<td>
						<i class="ri-arrow-right-line"></i>
					</td>
					<td>
						<div class="custom-control custom-switch">
							<input type="checkbox" class="custom-control-input providerswitches" clientswitches="{{prestation.id}}" id="customSwitches{{prestation.id}}" {% if prestation.isActive %} checked {% endif %}>
							<label class="custom-control-label" for="customSwitches{{prestation.id}}"></label>
						</div>
					</td>
				</tr>
            {% endfor %}
				
			</tbody>
		</table>
	</div>
	<div class="d-lg-flex justify-content-end">
		<a class="btn text-white btn264d7e" href="/admin/addprestation">Ajouter une prestation</a>
	</div>
{% endblock %}
